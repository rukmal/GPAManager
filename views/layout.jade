    body
        nav.navbar.navbar-default.navbar-fixed-top#menu(role='navigation')
            div.container
                div.navbar-header
                    button.navbar-toggle(type="button" data-toggle="collapse" data-target="#collapsedBar")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
                    a.navbar-brand(href='#') GPA Manager
                div.collapse.navbar-collapse#collapsedBar
                    ul.nav.navbar-nav
                        li: a(href='/') Home
                        li: a(href='/features') Features
                        li: a(href='/about') About
                    form.navbar-form.navbar-right(method='post' action='/login-attempt')
                        div.form-group
                            input.form-control(name='login_uname' type='text' placeholder='username')
                            input.form-control(name='login_password' type='password' placeholder='password')
                            button.btn.btn-default(type='submit') Login
        block content
